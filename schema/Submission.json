{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "Submission.json",
    "$comment": "$id should be URL where the schema is available.",
    "description": "Nettskjema submission metadata",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "$schema",
        "answers",
        "metadata"
    ],
    "properties": {
        "$schema": {
            "description": "Schema this submission conforms to",
            "type": "string"
        },
        "answers": {
            "description": "Answers in the submission.",
            "type": "array",
            "items": {
                "$ref": "#/$defs/answer"
            }
        },
        "metadata": {
            "description": "Metadata for the submission.",
            "type": "object",
            "required": [
                "created",
                "answer_time",
                "submission_id"
            ],
            "properties": {
                "created": {
                    "description": "When was the submission created.",
                    "type": "string",
                    "format": "date-time"
                },
                "answer_time": {
                    "description": "How many seconds did it take to answer the form.",
                    "type": "number"
                },
                "submission_id": {
                    "description": "Unique identifier for this submission.",
                    "type": "number"
                },
                "respondent": {
                    "$ref": "#/$defs/respondent"
                }
            }
        }
    },
    "$defs": {
        "answer": {
            "description": "An answer to a question.",
            "type": "object",
            "minProperties": 1,
            "maxProperties": 1,
            "propertyNames": {
                "pattern": "^[A-Za-z0-9_]+"
            }
        },
        "respondent": {
            "description": "Info about the respondent of the nettskjema.",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "provider",
                "sub"
            ],
            "properties": {
                "provider": {
                    "description": "The identity provider.",
                    "type": "string",
                    "enum": [
                        "tsd",
                        "idporten",
                        "feide"
                    ]
                },
                "sub": {
                    "description": "OIDC sub",
                    "type": "string"
                },
                "personal_identifier": {
                    "description": "National personal identifier.",
                    "type": "string"
                },
                "user_name": {
                    "description": "User name assigned to the respondent by their IdP.",
                    "type": "string"
                }
            }
        }
    }
}