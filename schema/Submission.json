{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "Submission.json",
    "$comment": "$id should be URL where the schema is available.",
    "description": "Nettskjema submission metadata",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "$schema",
        "answers",
        "metaData"
    ],
    "properties": {
        "$schema": {
            "description": "Schema this submission conforms to",
            "type": "string"
        },
        "answers": {
            "description": "Answers in the submission.",
            "type": "array",
            "items": {
                "$ref": "#/$defs/answer"
            }
        },
        "metaData": {
            "description": "Metadata for the submission.",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "submissionId",
                "delivered",
                "answerTime",
                "createdDate"
            ],
            "properties": {
                "submissionId": {
                    "description": "Unique identifier for this submission.",
                    "type": "number"
                },
                "delivered": {
                    "description": "Has the submission been delivered.",
                    "type": "boolean"
                },
                "answerTime": {
                    "description": "How many seconds did it take to answer the form.",
                    "type": "number"
                },
                "createdDate": {
                    "description": "When was the submission created.",
                    "type": "string",
                    "format": "date-time"
                },
                "modifiedDate": {
                    "description": "When was the submission last modified.",
                    "type": "string",
                    "format": "date-time"
                },
                "respondent": {
                    "$ref": "#/$defs/respondent"
                }
            }
        }
    },
    "$defs": {
        "answer": {
            "description": "An answer to a question.",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "questionId",
                "elementRef",
                "textAnswer"
            ],
            "properties": {
                "questionId": {
                    "description": "Unique identifier for the question.",
                    "type": "number"
                },
                "elementRef": {
                    "description": "ID linking this answer to an elment in form metadata.",
                    "$comment": "Need some way of linking answers to the metadata from form.",
                    "type": "number"
                },
                "externalElementId": {
                    "description": "Value from codebook.",
                    "type": "string"
                },
                "questionType": {
                    "$ref": "QuestionType.json"
                },
                "textAnswer": {
                    "description": "Textual representation of the answer.",
                    "type": "string"
                },
                "externalQuestionId": {
                    "description": "TODO",
                    "$comment": "What is this?",
                    "type": "string"
                },
                "answerOptions": {
                    "description": "For questions with multiple choices.",
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/answerOption"
                    }
                }
            }
        },
        "answerOption": {
            "description": "Used for questions with multiple choices.",
            "type": "object",
            "additionalProperties": false,
            "required": [],
            "properties": {
                "text": {
                    "description": "Textual representation of the answer.",
                    "type": "string"
                },
                "correct": {
                    "description": "Was this the correct answer or not.",
                    "type": "boolean"
                },
                "sequence": {
                    "description": "Which number was this answer.",
                    "type": "number"
                },
                "preselected": {
                    "description": "Was this the preselected answer.",
                    "type": "boolean"
                },
                "answerOptionId": {
                    "description": "Unique identifier for this answer option.",
                    "type": "number"
                },
                "externalAnswerOptionId": {
                    "description": "Codebook value for this option.",
                    "type": "string"
                }
            }
        },
        "respondent": {
            "description": "Info about the respondent of the nettskjema.",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "provider"
            ],
            "properties": {
                "provider": {
                    "description": "The identity provider.",
                    "type": "string",
                    "enum": [
                        "dataporten",
                        "idporten",
                        "feide"
                    ]
                },
                "sub": {
                    "description": "OIDC sub",
                    "type": "string"
                },
                "personal_identifier": {
                    "description": "Personal identifier.",
                    "type": "string"
                }
            }
        }
    }
}