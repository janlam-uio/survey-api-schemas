{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "Submission.json",
    "$comment": "$id should be URL where the schema is available.",
    "description": "Nettskjema submission metadata",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "answers",
        "metadata"
    ],
    "properties": {
        "answers": {
            "description": "Answers in the submission with externalElementId as keys. Their order is defined by the 'elements' in the forms metadata for this skjema.",
            "type": "object",
            "additionalProperties": false,
            "propertyNames": {
                "pattern": "^[A-Za-z0-9_]+"
            },
            "patternProperties": {
                "^[A-Za-z0-9_]+": {
                    "description": "A single answer with externalElementId as keys.",
                    "oneOf": [
                        {"type": "string" },
                        {"type": "null" },
                        {"type": "number" },
                        {"$ref": "#/$defs/attachmentAnswer"},
                        {"$ref": "#/$defs/checkboxAnswer"},
                        { "$ref": "#/$defs/matrixCheckboxAnswer" },
                        { "$ref": "#/$defs/matrixRadioMatrixAnswer" }

                    ]
                }
            }
        },
        "metadata": {
            "description": "Metadata for the submission.",
            "type": "object",
            "required": [
                "created",
                "answer_time",
                "submission_id"
            ],
            "additionalProperties": false,
            "properties": {
                "created": {
                    "description": "When was the submission created.",
                    "type": "string"
                },
                "answer_time": {
                    "description": "How many seconds did it take to answer the form.",
                    "type": "number"
                },
                "submission_id": {
                    "description": "Unique identifier for this submission.",
                    "type": "number"
                },
                "number_of_attachments": {
                    "type": "number"
                },
                "respondent": {
                    "$ref": "#/$defs/respondent"
                }
            }
        },
        "version": {
            "description": "An identifier which format is used. Can be used to find correct version of this schema.",
            "type": "string"
        }
    },
    "$defs": {
        "attachmentAnswer": {
            "description": "File attachment.",
            "type": "object",
            "required": [
                "original_filename",
                "file_id"
            ],
            "properties": {
                "original_filename": {
                    "description": "The filename used then the attachment was submitted.",
                    "type": "string"
                },
                "file_id": {
                    "description": "A unique identifier to retrieve the attchment.",
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "checkboxAnswer": {
            "description": "Checkbox answers.",
            "type": "object",
            "propertyNames": {
                "pattern": "^[A-Za-z0-9_]+"
            },
            "additionalProperties": false,
            "patternProperties": {
                "^[A-Za-z0-9_]+": {
                    "description": "A single checkbox answer with externalElementId as keys.",
                    "type": "boolean"
                }
            }
        },
        "matrixCheckboxAnswer": {
            "description": "Matrix with checkbox answers.",
            "type": "object",
            "propertyNames": {
                "pattern": "^[A-Za-z0-9_]+"
            },
            "additionalProperties": false,
            "patternProperties": {
                "^[A-Za-z0-9_]+": {
                    "$ref": "#/$defs/checkboxAnswer"
                }
            }
        },
        "matrixRadioMatrixAnswer": {
            "description": "Matrix with radio answers.",
            "type": "object",
            "propertyNames": {
                "pattern": "^[A-Za-z0-9_]+"
            },
            "additionalProperties": false,
            "patternProperties": {
            "^[A-Za-z0-9_]+": {
                    "oneOf": [{ "type": "string" }, { "type": "null" }]
                }
            }
        },
        "respondent": {
            "description": "Info about the respondent of the nettskjema.",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "provider",
                "sub"
            ],
            "properties": {
                "provider": {
                    "description": "The identity provider.",
                    "type": "string",
                    "enum": [
                        "tsd",
                        "idporten",
                        "feide"
                    ]
                },
                "sub": {
                    "description": "OIDC sub",
                    "type": "string"
                },
                "personal_identifier": {
                    "description": "National personal identifier.",
                    "type": "string"
                },
                "user_name": {
                    "description": "User name assigned to the respondent by their IdP.",
                    "type": "string"
                }
            }
        }
    }
}